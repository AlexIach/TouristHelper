<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.main.RegistrationActivity"
    android:fillViewport="true">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:background="@color/colorGtey"
            android:src="@drawable/my_photo"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:id="@+id/myPhotoIdIC"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RadioGroup
            android:id="@+id/radioSexIC"
            android:paddingTop="50dp"
            android:layout_below="@+id/myPhotoIdIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioMaleIC"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radioFemaleIC"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:checked="false" />

        </RadioGroup>






        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUserAgeIC"
            android:drawableLeft="@drawable/ic_image_filter_vintage_grey600_24dp"
            android:drawableTint="@color/colorPrimary"
            android:hint="@string/age"
            android:textColorHint="@color/colorPrimary"
            android:inputType="number"
            android:layout_below="@+id/radioSexIC"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUserWeightIC"
            android:layout_below="@+id/editTextUserAgeIC"
            android:drawableLeft="@drawable/ic_human_child_grey600_24dp"
            android:drawableTint="@color/colorPrimary"
            android:hint="@string/weight"
            android:textColorHint="@color/colorPrimary"
            android:inputType="number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUserHeightIC"
            android:layout_below="@+id/editTextUserWeightIC"
            android:drawableLeft="@drawable/ic_human_greeting_grey600_24dp"
            android:drawableTint="@color/colorPrimary"
            android:hint="@string/height"
            android:textColorHint="@color/colorPrimary"
            android:inputType="number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_goal"
            android:drawableTint="@color/colorPrimary"
            android:textSize="20dp"
            android:id="@+id/textView2IC"
            android:drawableLeft="@drawable/ic_google_glass_grey600_24dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:layout_below="@+id/editTextUserHeightIC"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerIC"
            android:layout_below="@+id/editTextUserHeightIC"
            android:layout_toRightOf="@+id/textView2IC"
            android:layout_toEndOf="@+id/textView2IC"
            android:paddingLeft="12dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_style"
            android:drawableTint="@color/colorPrimary"
            android:textSize="20dp"
            android:id="@+id/tvLifeStyleIC"
            android:drawableLeft="@drawable/ic_bike_grey600_24dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:layout_below="@+id/textView2IC"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerLifeStyleIC"
            android:layout_below="@+id/spinnerIC"
            android:layout_toRightOf="@+id/textView2IC"
            android:layout_toEndOf="@+id/textView2IC"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"

            />





        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fabRegisterIC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_plus"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            android:paddingLeft="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </RelativeLayout>




</ScrollView>
