<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.main.FormulesActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mifflin-SenJeora"
        android:id="@+id/buttonMIfflineSeJeora"
        android:background="@color/colorPrimary"
        android:onClick="onClickbuttonbuttonMIfflineSeJeora"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harris Benedikt"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:id="@+id/buttonHarrisBenedikt"
        android:layout_below="@+id/buttonMIfflineSeJeora"
        android:onClick="onClickbuttonHarrisBenedikt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="New Harris Benedikt"
        android:background="@color/colorPrimary"
        android:id="@+id/buttonHarrisBenediktNew"
        android:layout_below="@+id/buttonHarrisBenedikt"
        android:onClick="onClickButtonHarrisBenediktNew"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="WOH"
        android:background="@color/colorPrimary"
        android:id="@+id/woh"
        android:onClick="onClickWoh"
        android:layout_below="@+id/buttonHarrisBenediktNew"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />
</RelativeLayout>
